import matplotlib.pyplot as plt
# 数据
categories = ['Accuracy', 'F1 Score', 'Precision', 'Recall']
data_set_A = [0.9534, 0.9063, 0.9113, 0.9016]
data_set_B = [0.9548, 0.9081, 0.9234, 0.8950]
data_set_C = [0.9399, 0.9399, 0.9399, 0.9223]
# 创建柱状图
x = categories
y1 = data_set_A
y2 = data_set_B
y3 = data_set_C
bar_width = 0.25  # 条形的宽度
index = list(range(len(y1)))  # x轴上的位置
fig, ax = plt.subplots()
bars1 = ax.bar(index, y1, bar_width, label='CNN+only_name_128', color='#B8FABF')
bars2 = ax.bar([i + bar_width for i in index], y2, bar_width, label='CNN+ALL_weight_128', color='#8FDBF3')
bars3 = ax.bar([i + 2 * bar_width for i in index], y3, bar_width,  label='CNN+only_name_27*64', color='#F9F9CA')
# 添加标签和标题
ax.set_xlabel('P:R:U=1:3:0')
ax.set_ylabel('Value')
ax.set_title('Comparison of Data Sets')
ax.set_xticks([i + bar_width for i in range(len(y1))])
ax.set_xticklabels(categories)
# 添加图例
ax.legend()
# 显示图形
plt.show()
